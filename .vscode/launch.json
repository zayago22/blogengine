{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "BlogEngine: FastAPI Dev",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.main:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            "jinja": true,
            "env": {
                "APP_ENV": "development",
                "APP_DEBUG": "true"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "BlogEngine: Test Actual",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/", "-v", "-s"],
            "console": "integratedTerminal"
        }
    ]
}
